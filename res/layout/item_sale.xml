<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:id="@+id/ll_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView 
            android:id="@+id/item_order_number"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="订单号"
            />
        <TextView 
            android:id="@+id/item_goods_number"
            android:layout_width="0px"
            android:layout_height="wrap_content"
             android:layout_weight="1"
             android:text="货道号"
            />
        <TextView 
            android:id="@+id/item_goods_code"
            android:layout_width="0px"
            android:layout_height="wrap_content"
             android:layout_weight="1"
             android:text="商品编码"
            />
        <TextView 
            android:id="@+id/item_goods_name"
            android:layout_width="0px"
            android:layout_height="wrap_content"
             android:layout_weight="1"
            android:text="商品名称"
            />
        <TextView 
            android:id="@+id/item_order_price"
            android:layout_width="0px"
            android:layout_height="wrap_content"
             android:layout_weight="1"
            android:text="总价"
            />
        
         <TextView 
            android:id="@+id/item_total_number"
            android:layout_width="0px"
            android:layout_height="wrap_content"
             android:layout_weight="1"
            android:text="数量"
            />
         
         <TextView 
            android:id="@+id/item_order_type"
            android:layout_width="0px"
            android:layout_height="wrap_content"
             android:layout_weight="1"
            android:text="交易方式"
            />
         
         <TextView 
            android:id="@+id/item_order_status"
            android:layout_width="0px"
            android:layout_height="wrap_content"
             android:layout_weight="1"
            android:text="交易状态"
            />
         <TextView 
            android:id="@+id/item_order_time"
            android:layout_width="0px"
            android:layout_height="wrap_content"
             android:layout_weight="1"
            android:text="时间"
            />
    </LinearLayout>
</LinearLayout>
