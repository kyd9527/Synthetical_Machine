<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" >
        <TextView 
            android:id="@+id/item_goods_number"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            />
        <TextView 
            android:id="@+id/item_goods_code"
            android:layout_width="0px"
            android:layout_height="wrap_content"
             android:layout_weight="1"
            />
        <TextView 
            android:id="@+id/item_goods_name"
            android:layout_width="0px"
            android:layout_height="wrap_content"
             android:layout_weight="1"
            />
        <TextView 
            android:id="@+id/item_goods_type"
            android:layout_width="0px"
            android:layout_height="wrap_content"
             android:layout_weight="1"
            />
        <TextView 
            android:id="@+id/item_goods_price"
            android:layout_width="0px"
            android:layout_height="wrap_content"
             android:layout_weight="1"
            />
        <LinearLayout 
            android:id="@+id/ll_goods"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <TextView 
                android:id="@+id/item_goods_updata"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="修改"
                android:textSize="@dimen/activity_text_size"
                android:background="@color/red"
                android:gravity="center"
                android:layout_marginRight="5dp"
                />
            <TextView 
                 android:id="@+id/item_goods_delete"
               android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="删除"
                android:textSize="@dimen/activity_text_size"
                android:background="@color/red"
                 android:gravity="center"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>